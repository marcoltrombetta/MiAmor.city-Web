@model IList<MiAmor.Core.VendorBlogPost>

@{
    foreach (var blogpost in Model)
    {
        <text>
                <li>
                    <div class="post-with-image">
                        <div class="date-month">
                            <a href="#">
                                <span class="date">@blogpost.BlogPost.CreatedOnUtc.Day</span>
                                <span class="month">@blogpost.BlogPost.CreatedOnUtc.Month</span>
                            </a>
                        </div>

                        <div class="post-image">
                            <img src="@blogpost.BlogPost.BlogPostPictures.SingleOrDefault().Picture.BaseUrl" alt="">
                        </div>

                        <h2 class="title"><a href="#">@blogpost.BlogPost.Title</a></h2>

                        <p class="user">
                            <a href="#"><i class="fa fa-user"></i>Admin</a>
                            <a href="#"><i class="fa fa-folder-open-o"></i>Design</a>
                            <a href="#"><i class="fa fa-comments-o"></i>@blogpost.BlogPost.CommentCount Comments</a>
                        </p>

                        <p class="post">
                            @blogpost.BlogPost.ShortDescription
                        </p>

                        <p class="tag">
                            <i class="fa fa-tag"></i>
                            @blogpost.BlogPost.Tags
                        </p>

                        <a class="post-read-more" href="#"><i class="fa fa-angle-right"></i>Read More</a>

                    </div> <!-- end .post-with-image -->
                </li>
        </text>

    }

}
