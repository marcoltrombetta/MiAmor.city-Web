@model MiAmor.Core.Vendor
@{
    Layout = "~/Views/Shared/_LayoutVendor.cshtml";
}

    <div class="tab-pane active" id="company-contact">
        <div class="company-profile company-contact">

            <h2>Contact Us</h2>

            <div class="social-link text-right">
                <ul class="list-inline">
                    <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                    <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                    <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                    <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                </ul>
            </div>

            <div class="company-text">
                <p>
                    @Model.FullDescription

                </p>
            </div> <!-- end company-text -->


            <div class="row">
                <div class="col-md-6">

                    <div class="contact-map-company">
                        <div id="contact_map_canvas_one">

                        </div>
                    </div> <!-- end .map-section -->

                    <h3>Headquarters</h3>

                    <h5>Address Details</h5>

                    <div class="address-details clearfix">
                        <i class="fa fa-map-marker"></i>

                        <p>

                            <span>@Model.Addresses.FirstOrDefault().Address1</span>
                            <span>@Model.Addresses.FirstOrDefault().Country.Name</span>
                            <span>@Model.Addresses.FirstOrDefault().LocalityName</span>

                        </p>
                    </div>

                    <div class="address-details clearfix">
                        <i class="fa fa-phone" onclick="getVendorPhoneNumber('@Model.Id');"></i>

                        <p>
                            <span class="phonenumber"><strong>Phone:</strong>@Model.Addresses.FirstOrDefault().PhoneNumber.Substring(0, Model.Addresses.FirstOrDefault().PhoneNumber.Length - 2)**</span>
                            @*<span class="faxnumber">@Model.Addresses.FirstOrDefault().FaxNumber.Substring(0, Model.Addresses.FirstOrDefault().FaxNumber.Length - 2)**<a href="#" onclick="getVendorFaxNumber('@Model.Id');" class="fa fa-question-circle"></a></span>*@

                        </p>
                    </div>

                    <div class="address-details clearfix">
                        <i class="fa fa-envelope-o"></i>

                        <p>
                            <span><strong>E-mail:</strong>example@example.com</span>
                            <span><span><strong>Website:</strong> www.example.com</span></span>
                        </p>
                    </div>

                    @*<h5>Openig Hours</h5>

                        <div class="address-details clearfix">
                            <i class="fa fa-clock-o"></i>

                            <p>

                                <span><strong>Mo-Fri:</strong> 9AM - 5PM</span>
                                <span><span><strong>Saturday:</strong> 10AM - 2PM</span></span>
                                <span><strong>Sunday:</strong> Closed</span>
                            </p>
                        </div>*@

                </div> <!-- end main grid layout -->

                <div class="col-md-6">
                    <div class="contact-map-company">
                        <div id="contact_map_canvas_two">

                        </div>
                    </div> <!-- end .map-section -->

                    <h3>Retailing Point</h3>

                    <h5>Address Details</h5>

                    <div class="address-details clearfix">
                        <i class="fa fa-map-marker"></i>

                        <p>
                            <span>1234 Hyde Street</span>
                            <span>San Francisco</span>
                            <span>CA 94043</span>
                        </p>
                    </div>

                    <div class="address-details clearfix">
                        <i class="fa fa-phone"></i>

                        <p>
                            <span><strong>Phone:</strong> +1 123-456-7890</span>
                            <span><strong>Fax:</strong> +1 123-456-7891</span>
                        </p>
                    </div>

                    <div class="address-details clearfix">
                        <i class="fa fa-envelope-o"></i>

                        <p>
                            <span><strong>E-mail:</strong> example@example.com</span>
                            <span><span><strong>Website:</strong> www.example.com</span></span>
                        </p>
                    </div>

                    <br />
                    <br />
                    @*<h5>Openig Hours</h5>

                        <div class="address-details clearfix">
                            <i class="fa fa-clock-o"></i>

                            <p>
                                <span><strong>Mo-Fri:</strong> 9AM - 5PM</span>
                                <span><span><strong>Saturday:</strong> 10AM - 2PM</span></span>
                                <span><strong>Sunday:</strong> Closed</span>
                            </p>
                        </div>*@

                </div> <!-- end main grid layout -->
            </div> <!-- end .row -->

            <h3>Send Us A Message</h3>
            <form class="comment-form">
                <div class="row">
                    <div class="col-md-4">
                        <input type="text" placeholder="Name *" required>
                    </div>

                    <div class="col-md-4">
                        <input type="email" placeholder="Email *" required>
                    </div>

                    <div class="col-md-4">
                        <input type="url" placeholder="Website">
                    </div>
                </div>

                <textarea placeholder="Your Comment ..." required></textarea>

                <button type="submit" class="btn btn-default"><i class="fa fa-envelope-o"></i> Send Message</button>
            </form>

        </div> <!-- end .company-contact -->
    </div> <!-- end .tab-pane -->

    <script>

        $("#contact_map_canvas_two").goMap({
            maptype: 'ROADMAP',
            zoom: 13,
            markers: [{
                latitude: 37.793100669930396,
                longitude: -122.41769313812256,
                html: 'MiAmor'
            }]
        });

        $("#contact_map_canvas_one").goMap({
            maptype: 'ROADMAP',
            zoom: 13,
            markers: [{
                latitude: @Html.Raw(Model.Addresses.FirstOrDefault().Latitude).ToString().Replace(",","."),
                longitude: @Html.Raw(Model.Addresses.FirstOrDefault().Longitude).ToString().Replace(",", "."),
                html: 'MiAmor'
            }]
        });

    </script>
