@model MiAmor.Web.Models.CustomerMessageListingModel         

  <!--Table Search v2-->
<div class="table-search-v2 margin-bottom-20">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Vendor</th>
                    <th>Title</th>
                    <th>Sent</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (MiAmor.Web.Models.CustomerMessageModel item in Model.CustomerMessageModel)
                    {
                        <text>
                                <tr>
                                    <td>
                                        @Html.Raw((item.WasOpened == null ? "" : "<strong>") + item.Vendor.Name.ToString() + (item.WasOpened == null ? "" : "</strong>"))
                                    </td>
                                    <td class="td-width">
                                        <h3><a href="#">@Html.Raw((item.WasOpened == null ? "" : "<strong>") + item.Title.ToString() + (item.WasOpened == null ? "" : "</strong>"))</a></h3>
                                        <small class="hex">@Html.Raw((item.WasOpened == null ? "" : "<strong>") + "Joined February 28, 2014" + (item.WasOpened == null ? "" : "</strong>"))</small>
                                    </td>
                                    <td>
                                        @Html.Raw((item.WasOpened == null ? "" : "<strong>") + item.DateSend + (item.WasOpened == null ? "" : "</strong>"))
                                    </td>
                                </tr>
                        </text>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<!--End Table Search v2-->